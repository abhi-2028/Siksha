<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9fafc;
      font-family: 'Segoe UI', sans-serif;
    }
    .welcome-card {
      background: linear-gradient(90deg, #2563eb, #f97316);
      color: white;
      border-radius: 15px;
      padding: 25px;
    }
    .welcome-card h2 { font-weight: 600; }
    .continue-card, .subject-card, .achievement-card {
      border-radius: 15px;
      background: #fff;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    .subject-card { transition: 0.3s; }
    .subject-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
    .progress { height: 6px; border-radius: 4px; }
    .streak-card {
      border-radius: 15px;
      background: linear-gradient(90deg, #10b981, #34d399);
      color: white;
      padding: 20px;
    }
    .progress-text { font-size: 14px; font-weight: 500; }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">
        <img src="https://img.icons8.com/ios-filled/50/000000/book.png" alt="Logo" width="30" class="me-2">
        ‡§∂‡§ø‡§ï‡•ç‡§∑‡§æ Siksha
      </a>
      <div class="d-flex align-items-center">
        <form action="/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="container mt-5 pt-4">
    <!-- Welcome Header -->
    <div class="welcome-card mb-4 d-flex justify-content-between align-items-center">
      <div>
        <h2>Welcome back, <%= student.name %>!</h2>
        <p>Ready to continue your learning journey?</p>
      </div>
      <h4 class="fw-bold">
        <%= student.progress || "0%" %> <br>
        <span style="font-size:14px;">Overall Progress</span>
      </h4>
    </div>

    <div class="row">
      <!-- Left: Continue + Subjects -->
      <div class="col-lg-8">

        <!-- Continue Learning -->
        <div class="continue-card mb-4">
          <% if (student.currentLesson) { %>
            <h6 class="text-muted">Continue Learning</h6>
            <h5 class="fw-bold"><%= student.currentLesson.title %></h5>
            <p class="text-muted"><%= student.currentLesson.subject %></p>
            <div class="progress mb-2">
              <div class="progress-bar bg-primary" style="width: <%= student.currentLesson.progress %>;"></div>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">‚è± <%= student.currentLesson.duration %></small>
              <button class="btn btn-primary btn-sm">Continue</button>
            </div>
          <% } else { %>
            <h6 class="text-muted">No lessons available yet.</h6>
            <p>Check back later when lessons are uploaded.</p>
          <% } %>
        </div>

        <!-- Subjects -->
        <h5 class="fw-bold mb-3">Your Subjects</h5>
        <div class="row g-3">
          <% if (student.subjects && student.subjects.length > 0) { %>
            <% student.subjects.forEach(sub => { %>
              <div class="col-md-6">
                <div class="subject-card">
                  <h6><%= sub.icon || "üìò" %> <%= sub.name %></h6>
                  <small class="text-muted"><%= sub.translation || "" %></small>
                  <div class="progress my-2">
                    <div class="progress-bar bg-primary" style="width: <%= sub.progress %>;"></div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <small class="progress-text">Progress</small>
                    <small class="progress-text"><%= sub.completed %>/<%= sub.total %></small>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No subjects available yet.</p>
          <% } %>
        </div>
      </div>

      <!-- Right: Achievements + Streak -->
      <div class="col-lg-4">
        <div class="achievement-card">
          <h6 class="fw-bold mb-3">Recent Achievements</h6>
          <% if (student.achievements && student.achievements.length > 0) { %>
            <% student.achievements.forEach(a => { %>
              <p>üèÜ <%= a.title %> <br>
                <small class="text-muted"><%= a.description %></small>
              </p>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No achievements yet. Keep learning to unlock achievements!</p>
          <% } %>
        </div>

        <div class="streak-card text-center">
          <h6>Learning Streak</h6>
          <h2 class="fw-bold"><%= student.streak || 0 %> Days</h2>
          <p><%= student.streak > 0 ? "Keep it up! You're doing great." : "Start your learning journey today!" %></p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
