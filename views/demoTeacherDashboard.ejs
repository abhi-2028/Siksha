      <div class="col-md-3"><div class="stat-card"><h4>12</h4><p>Active Lessons</p></div></div>
      <div class="col-md-3"><div class="stat-card"><h4>78%</h4><p>Completion Rate</p></div></div>
      <div class="col-md-3"><div class="stat-card"><h4>82%</h4><p>Average Score</p></div></div>
    </div>

    <div class="row">
      <!-- Student Progress -->
      <div class="col-lg-6">
        <h5 class="mb-3">Student Progress</h5>

        <div class="student-card">
